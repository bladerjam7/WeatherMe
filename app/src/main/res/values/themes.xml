<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WeatherMe" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="DefaultColorText">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="UpdateText" parent="DefaultColorText">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="DayOfTheWeekText" parent="DefaultColorText">
        <item name="android:textSize">25sp</item>
    </style>

    <style name="ChangeOfRainText" parent="DefaultColorText">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="CityText" parent="DefaultColorText">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/oswald_light</item>
        <item name="android:textSize">25sp</item>

    </style>

    <style name="CurrentNumberText" parent="DefaultColorText">
        <item name="android:fontFamily">@font/hachimarupop_regular</item>
        <item name="android:textSize">100sp</item>
    </style>

    <style name="CurrentNumberTextDegreeSymbol" parent="CurrentNumberText">
        <item name="android:textSize">30sp</item>
    </style>

</resources>